<odoo>
    <data>
        <record id="action_departments" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hms.department</field>
        </record>

         <record id="departments_tree_view" model="ir.ui.view">
            <field name="name">departments tree view </field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                </tree>
            </field>

        </record>
        <record id="departments_form_view" model="ir.ui.view">
            <field name="name">departments form view </field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Department Info">
                                <field name="name"/>
                                <field name="capacity"/>
                                <field name="is_open"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Patients">
                                <field name="patients"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>

        </record>

        <menuitem id="departments_menu_item" name="departments"
                  parent="hms_root_menu"
                  action="action_departments"
                />

    </data>
</odoo>